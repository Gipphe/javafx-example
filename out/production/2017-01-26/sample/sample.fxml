<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Slider?>
<AnchorPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml">
    <VBox>
        <Slider fx:id="sizeSlider" min="1" max="60" />
        <ColorPicker fx:id="colorPicker" onAction="#changeColor" />
        <Label>Canvas</Label>
        <Canvas fx:id="canvas" width="400" height="400" onMouseClicked="#click" onMouseDragged="#click" />
    </VBox>
</AnchorPane>
